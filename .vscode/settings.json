{
  "json.schemas": [
    {
      "fileMatch": ["/examples/1.0/*.model.json"],
      "url": "/schemas/1.0/schema.json"
    },
    {
      "fileMatch": ["/examples/2.0/*.model.json"],
      "url": "/schemas/2.0/json/owsp.schema.json"
    },
    {
      "fileMatch": ["/examples/2.0/*.profile.json"],
      "url": "/schemas/2.0/json/profile.owsp.schema.json"
    },
    {
      "fileMatch": ["/examples/2.0/*.glass.json"],
      "url": "/schemas/2.0/json/glass.owsp.schema.json"
    },
    {
      "fileMatch": ["/examples/2.0/*.glazing.json"],
      "url": "/schemas/2.0/json/glazing.owsp.schema.json"
    },
    {
      "fileMatch": ["/examples/2.0/*.panel.json"],
      "url": "/schemas/2.0/json/panel.owsp.schema.json"
    },
    {
      "fileMatch": ["/examples/2.0/*.spacer.json"],
      "url": "/schemas/2.0/json/spacer.owsp.schema.json"
    },
    {
      "fileMatch": ["/examples/2.0/*.hardware.json"],
      "url": "/schemas/2.0/json/hardware.owsp.schema.json"
    },
    {
      "fileMatch": ["/examples/2.0/*.reinforcement.json"],
      "url": "/schemas/2.0/json/reinforcement.owsp.schema.json"
    }
  ],
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[json]": {
    "editor.quickSuggestions": {
      "strings": true
    },
    "editor.suggest.insertMode": "replace"
  },
  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "keep",
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    }
  },
  "markdown.extension.toc.updateOnSave": false,
  "yaml.schemas": {
    "https://json-schema.org/draft-04/schema": ["schemas/1.0/schema.yaml"]
  },
  "yaml-plus-json": {
    "keepOriginalFiles": "always"
  }
}
